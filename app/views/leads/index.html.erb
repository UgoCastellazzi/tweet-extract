<div class="container">
  <div class="row">
    <div class="col">
      <div class="alerts-container">
        <h1>Leads for "<%= @alert.keyword %>"</h1>
        <div>
          <a href="leads.csv" class="export-button">Export all leads</a>
          <a href="leads/update_tweets" class="refresh-button"> <i class="fas fa-sync-alt"></i> Refresh leads</a>
        </div>
        
        <div class="table-container">
          <div class="table-title">
            <h2 class="col-3">PROFILE</h2>
            <h2 class="col-3">DESCRIPTION</h2>
            <h2 class="col-4">TWEET</h2>
            <h2 class="col-1">DATE</h2>
            <h2 class="col-1">ADD</h2>
          </div>
            <div class="table">
              <% @leads.each do | lead |%>
                <div class="table-row">
                  <div class="profile-container col-3">
                    <a href="https://twitter.com/<%= lead.handdle %>" target="blank">
                      <img class="avatar" alt="avatar" src="<%= lead.profile_pic_url %>" />
                    </a>
                    <div class="profile-details-container">
                      <p class="lead-handdle"> @<%= lead.handdle %> </p>
                      <p class="follow-info"> <%= lead.followers %> FOLLOWERS </p>
                      <p class="follow-info"> <%= lead.following %> FOLLOWING </p>
                    </div>
                  </div>
                  <div class="description-container col-3">
                    <p> <%= lead.description %> </p>
                  </div>
                  <div class="tweet-container col-4">
                    <a href="https://twitter.com/<%= lead.handdle %>/status/<%= lead.tweet_id%>" target="blank">
                      <p> <%= lead.tweet_content %> </p>
                    </a>
                  </div>
                  <div class="date-container col-1">
                    <p> <%= lead.date %> </p>
                  </div>
                  <div class="add-container col-1">
                    <%= link_to 'Delete', lead_path(lead), method: :delete %>
                  </div>
                </div>
              <% end %>
            </div>
        </div>
      </div>

    </div>
  </div>
</div>



